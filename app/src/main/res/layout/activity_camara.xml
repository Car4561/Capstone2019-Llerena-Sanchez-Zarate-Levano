<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_profile"
    tools:context=".UIEmpleadoRegular.CamaraActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Registro de asistencia"
        android:textSize="36dp"
         android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/imgCamara"
        android:layout_width="354dp"
        android:layout_height="353dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />

    <Button
        android:layout_below="@id/imgCamara"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar Manualmente"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="190dp"/>
</RelativeLayout>